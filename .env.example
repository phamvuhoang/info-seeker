# InfoSeeker Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Jina AI Configuration (Required for site-specific search)
JINA_API_KEY=your_jina_api_key_here
JINA_BASE_URL=https://s.jina.ai/
JINA_TIMEOUT=30
JINA_MAX_TOKENS_PER_REQUEST=20000
JINA_RATE_LIMIT_PER_MINUTE=60

# Site-specific Search Configuration
SITE_SPECIFIC_SEARCH_ENABLED=true
SITE_SPECIFIC_MAX_RESULTS=10
SITE_SPECIFIC_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql+psycopg://infoseeker:infoseeker@localhost:5432/infoseeker

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=true
APP_NAME=InfoSeeker
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Search Configuration
MAX_SEARCH_RESULTS=10
RESPONSE_TIMEOUT=30

# Frontend Configuration (for development)
REACT_APP_API_URL=http://localhost:8000
